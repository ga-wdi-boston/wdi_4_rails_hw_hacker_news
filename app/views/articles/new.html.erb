<div class='row'>
  <div class='large-4 columns'>
    <h3>Let's create an article</h3>
    <% if user_signed_in? %>

      <%= form_for @article do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
        <br>
        <%= f.label :url %>
        <%= f.text_field :url %>
        <br>
        <%= f.submit %>
      <% end %>
    <% end %>
  </div>
</div>
