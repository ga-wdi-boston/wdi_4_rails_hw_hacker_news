<div>
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col-md-2 text-center">
        <h1>6</h1>
        <p>current score</p>
        <hr>
      </div>
      <div class="col-md-8 ">
        <span class="glyphicon glyphicon-flash text-center"></span>
        <h4><%= link_to(article.title, article_path(article.id)) %></h4>
        <p><%= article.body %></p>

        <hr>

        <div class="btn-group btn-group-justified">

          <div class="btn-group">
            <%= link_to 'Read more', article_path(article.id) %>
          </div>
          <div class="btn-group">
            <% if user_signed_in? %>
            <span class="glyphicon glyphicon-arrow-up"></span>
              <% if current_user.upvote_for(article).present? %>
              <%= link_to 'Upvote', article_upvote_path(article, current_user.upvote_for(article)), method: :delete %>
              <% else %>
              <%= link_to 'Upvote', article_upvotes_path(article), method: :post %>
              <% end %>
            <% end %>
          </div>

          <div class="btn-group">
            <% if user_signed_in? %>
            <span class="glyphicon glyphicon-arrow-down"></span>
              <% if current_user.downvote_for(article).present? %>
              <%= link_to 'Downvote', article_downvote_path(article, current_user.downvote_for(article)), method: :delete %>
              <% else %>
              <%= link_to 'Downvote', article_downvotes_path(article), method: :post %>
              <% end %>
            <% end %>
          </div>
          <div class="btn-group">
            <% if user_signed_in? %>
              <p><%= link_to 'Comment', article_path(article.id) %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-2 text-center">
        <h1>4</h1>
        <p>people are talking about this</p>
        <hr>


      </div>
    </div>
  <% end %>
</div>



