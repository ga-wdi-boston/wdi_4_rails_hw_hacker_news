<div class="panel">
  <h2>Articles
    <small>
      <strong>
        <%= link_to 'New Article', new_article_path %>
      </strong>
    </small>
  </h2>
</div>

<ul>
  <% @articles.each do |article| %>
    <h4>
      <strong>
        <%= link_to article.title, article.url %>
      </strong>
      <br>
      <small>
        <%= link_to 'Comments', article_path(article) %>
      </small>
    </h4>
  <% end %>
</ul>

