<h3> Articles </h3>

<dl>
  <% @articles.each do |article| %>
    <dt> Title: <%= link_to(article.title, article_path(article.url)) %> </dt>
    <dd> URL: <%= article.url %> </dd>
    <dd> Submitted at: <%= article.submitted_at %> </dd>
  <% end %>
</dl>

<p><%= link_to 'Submit a new article', new_article_path %></p>
