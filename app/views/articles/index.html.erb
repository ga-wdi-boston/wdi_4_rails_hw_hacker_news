<%= link_to 'New Article', new_article_path %>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Article</th>
      <th>Submitted by:</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article.url %>
          <% if article.comments.present? %>
            - Comments <%= link_to "(#{article.comments.count})", article_comments_path(article) %>
          <% else %>
            <!-- Show nothing -->
          <% end %>
        </td>

        <td><%= article.user.email %></td>
        <td><%= link_to 'Discuss', article, :class => 'btn btn-mini' %></td>
      </tr>
    <% end %>
  </tbody>
</table>




