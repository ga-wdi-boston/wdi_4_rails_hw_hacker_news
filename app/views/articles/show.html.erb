<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <div class="well well-lg">

          <h2> <%= @article.title %></h2><br>
        <p>
          url: <%= link_to(@article.url) %>
          <br>
        </p>
      </div>

      <div class="form-actions">
        <%= link_to 'Back', article_path, :class => 'btn btn-primary btn-lg'  %>
        <%= link_to 'Edit', edit_article_path, :class => 'btn btn-primary btn-lg' %>
        <%= link_to 'Delete', article_path, :method => 'delete', confirm: 'Are you sure?', :class => 'btn btn-danger btn-lg' %>

        <%= render @article.comments %>
      </div>
    </div>
  </div>
</div>
