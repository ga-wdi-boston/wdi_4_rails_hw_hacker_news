
<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <div class="well well-lg">

          <h2> <%= @article.title %></h2><br>
        <p>
          url: <%= link_to(@article.url) %><br>
          submitted: <%= @article.created_at %>
        </p>
      </div>


      <% if user_signed_in? %>
        <% if current_user.id.equal?(@article.user_id) %>
          <div class="form-actions">
            <%= link_to 'Edit', edit_article_path, :class => 'btn btn-primary' %>
            <%= link_to 'Delete', article_path, :method => 'delete', confirm: 'Are you sure?', :class => 'btn btn-danger' %>
            <br>

          </div>
        <% end %>
        <br>

        <% @article.comments.each do |comment| %>
          <p>
            <%= comment.user.email %> said: <%=comment.content %><br>
            submitted: <%= comment.created_at %>
            <% if current_user.id.equal?(comment.user_id) %>
              | <%= link_to 'Delete', article_comment_path(comment, @article), method: 'delete', confirm: 'You sure?' %>
            <% end %>
          </p>
        <% end %>

        <%= link_to 'Add a comment', new_article_comment_path(@article) %>

        <!-- <#%= form_for [@article, @comment] do |f| %> -->
           <p>
          <!-- <#%= f.label :content %><br> -->
          <!-- <#%= f.text_area :content %> -->
          </p>
          <!-- <p><#%= f.submit "Add Comment"%></p> -->
        <!-- <#% end %> -->

      <% end %>


    </div>
  </div>
</div>
