<h1><%= @article.title %></h1>
  <%= link_to @article.url, @article.url %> <br>
  <%= @article.user.email %>
  <%= distance_of_time_in_words(@article.created_at, Time.now) %> ago <br>
  <br>
  <% @comments.each do |comment| %>
    <%= comment.user.email %>
    <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago <br>
    <%= comment.body %>
  <% end %>
