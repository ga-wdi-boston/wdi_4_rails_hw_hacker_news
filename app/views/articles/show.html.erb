<h1>Article: <%= @article.title %></h1>

<h2>Comments</h2>


<% @article.comments.each do |comment| %>
  <dt>

    <dt><%= link_to comment.title, comment %></dt>
    <dd><%= comment.body %></dd><br>
     <dd><%= comment.submission_date %></dd><br>
  </dt>
<% end %>

<%= link_to 'Add Comment', new_comment_path %>
<%= link_to 'Add Vote', new_article_vote_path(@article) %>
<%= link_to 'All Articles', root_path %>
