<h1>Show page for articles </h1>
<% if user_signed_in? %>
<% current_user_vote = current_user.vote_for(@article) %>
<% if current_user_vote.present? %>
<% if current_user_vote.upvote %>
<%= button_to "upvote", article_vote_path(@article, current_user_vote), method: :delete, class: "btn btn-warning" %>
<div class="btn btn-default">link downvote to switch vote</div>
<% else %>
<div class="btn btn-default">link upvote to switch</div>
<%= button_to "downvote", article_vote_path(@article, current_user_vote), method: :delete, class: "btn btn-primary" %>
<% end %>
<% else %>
<div>
  <%= button_to "upvote", article_votes_path(@article, upvote: true), method: :post, class: "btn btn-warning" %>
</div>
<div>
  <%= button_to "downvote", article_votes_path(@article, upvote: false), method: :post, class: "btn btn-primary" %>
</div>

<% end %>
<% end %>

<p> Posted by <%= @user.email %> at <%= @article.created_at %></p>
<div><%= @article.title %></div>
<div><%= link_to nil, @article.url %></div>

<h3>Comments</h3>
<% if user_signed_in? %>
<p><%= link_to 'Leave a comment', new_article_comment_path(@article) %></p>
<% end %>

<%= render @article.comments, article: @article %>
