<div class="panel panel-default">
  <div class="panel-body">
    <div class="btn-group pull-right">
      <%= render 'buttons', article: @article %>
    </div>

    <h1 class="text-center"><%= @article.title %></h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <ul class="list-group">
          <li class="list-group-item">
            <span class="glyphicon glyphicon-link"></span>
            <%= link_to nil, @article.url %>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <ul class="list-group">
          <li class="list-group-item">
            <%= form_for @comment, class: 'form-horizontal', url: article_comments_path(@article) do |f| %>
              <div class="form-group-row">
                <%= f.text_area :content,  class: 'form-control', rows: 3, placeholder: "Post a comment"%>
              </div>
              <div class="form-group row">
                <div class="col-md-offset-10 col-md-2">
                  <%= f.button class: 'btn btn-success' do %>
                    <span class="glyphicon glyphicon-ok"></span> Post
                  <% end %>
                </div>
              </div>
            <% end %>

          <% @article.comments.each do |comment| %>
            <%= render comment %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
