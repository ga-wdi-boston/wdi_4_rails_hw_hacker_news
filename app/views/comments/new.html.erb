

<div class="container">
  <div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">
      <h2>New comment!</h2>

      <%= form_for [@article, @comment] do |f| %>
        <%= f.label :content %><br>
        <%= f.text_area :content %><br>
        <%= f.submit "Add Comment", class:'btn btn-default'%><br>
      <% end %>
      <br>
      <%= link_to 'Back', article_path(@article), class:'btn btn-default'%>
    </div>

  </div>
</div>
