<h1>All Comments</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Submission Date</th>
  </tr>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.title %></td>
      <td><%= comment.body %></td>
      <td><%= comment.submission_date %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add Comment', new_comment_path %>
