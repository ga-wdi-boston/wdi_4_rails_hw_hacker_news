<h1><%= @article.title %></h1>
<%= link_to 'back to articles', root_path %>

<%= form_for [@article, @comment] do |f| %>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit %>
<% end %>



<table>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.user.email %></td>
      <td><%= comment.body %></td>
      <td><%= comment.created_at %></td>
    </tr>
  <% end %>
</table>


