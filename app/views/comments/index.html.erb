<h1><%=@article.title%></h1>
<% if user_signed_in? %>
<h1><%=link_to 'Create new comment', new_article_comment_path(@article)%></h1>
<% end %>
<ul>
  <% @comments.each do |comment|%>
    <li> <%=comment.body%>| <%=comment.created_at%></li>
    <%= button_to 'Up Vote', comment_votes_path(comment), method: :post %>
    <%= button_to 'Down Vote', comment_votes_path(comment), method: :post %>
  <% end %>
</ul>
