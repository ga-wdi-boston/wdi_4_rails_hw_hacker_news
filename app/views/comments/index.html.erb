<% if user_signed_in? %>
<%= link_to 'Add a Comment', new_article_comment_path(@article) %>
<% end %>
<%= link_to 'Back to Articles', articles_path %>

<ul>
       <% @comments.each do |comment| %>
  <li> <%= comment.body %> </li>
    <small> Posted by: <%= comment.user.email %>
            Posted at: <%= comment.created_at %>
    </small>
       <% end %>
</ul>

